<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

 >

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bt_fan2"
        >
        <RadioButton
            android:layout_marginTop="10sp"
            android:button="@null"
            android:drawableLeft="@mipmap/bt_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_fanhui"
            android:textSize="17sp"
            android:textColor="#80FFFF"
            android:text="返回"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_main_count"

            android:gravity="center_horizontal"/>

    </RadioGroup>

    <android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_weight="0.13"
    android:id="@+id/vp_main5"></android.support.v4.view.ViewPager>
    <SeekBar
        android:layout_weight="1"
        android:background="#A2FFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/senk"

        android:visibility="gone"
        />
</LinearLayout>
