<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff000">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/imquxiao"
        android:layout_marginStart="28dp"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:layout_marginRight="30sp"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/image_main6"
        android:background="@mipmap/ica"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="220sp"
        android:layout_height="90sp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_below="@+id/image_main6"
        android:layout_alignStart="@+id/image_main6"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30sp"
                android:layout_marginTop="4sp"
                android:layout_height="30sp"
                android:background="@drawable/imselector"
                android:id="@+id/im_main6"/>
            <EditText
                android:id="@+id/et_zhanghao"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="您的手机号"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30sp"
                android:layout_marginTop="4sp"
                android:layout_height="30sp"
                android:background="@drawable/imsuoselector"
                android:id="@+id/im_mima_main6"/>
            <EditText
                android:id="@+id/et_mima"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="220sp"
        android:layout_height="40sp"
        android:text="登录"
        android:background="@mipmap/btaaaaaa"
        android:textColor="#000000"
        android:id="@+id/button"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />
    <TextView
        android:id="@+id/tv_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即注册"
        android:textSize="25sp"
        android:textColor="#9B4E00"
        android:layout_below="@+id/button"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一 其他方式登录 一"
        android:textSize="13sp"
        android:textColor="#9B4E00"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/tv_zhuce"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <ImageView

        android:background="@mipmap/qq"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toStartOf="@+id/textView2" />
    <ImageView
        android:background="@mipmap/weibo"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/imageView4"

        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:background="@mipmap/weixin"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/imageView2"

        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/image_main6"
        android:layout_marginBottom="31dp" />

</RelativeLayout>