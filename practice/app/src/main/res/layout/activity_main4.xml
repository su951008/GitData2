<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bt_fan2"
        >
        <RadioButton
            android:layout_marginTop="10sp"
            android:button="@null"
            android:drawableLeft="@mipmap/bt_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_fanhui"
            android:textSize="17sp"
            android:textColor="#80FFFF"
            android:text="返回"/>/>
    </RadioGroup>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:scaleType="fitXY"
            android:id="@+id/im_main"/>
        <TextView
          android:layout_weight="0.1"
            android:textSize="20sp"

          android:gravity="center"
            android:textColor="#ff4444"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_main"/>
    </LinearLayout
        >
    <include
       layout="@layout/include" >
    </include>
<android.support.v4.view.ViewPager
    android:layout_width="wrap_content"
    android:layout_height="250sp"
    android:id="@+id/vp_main4"></android.support.v4.view.ViewPager>

</LinearLayout>
