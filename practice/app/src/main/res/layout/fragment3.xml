<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:background="#fff000"
                >
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:background="@mipmap/touxiang1"
                    android:id="@+id/imagefrag3"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textSize="20sp"
                    android:id="@+id/frag3_denglu"
                    android:layout_marginTop="10sp"
                    android:layout_below="@id/imagefrag3"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5sp"
                android:background="#D5D5D5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <RadioButton

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="我的信息"
                        android:button="@null"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/my_xinxi"
                        />
                </RadioGroup>
                <ImageView
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/my_"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:background="#D5D5D5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radio1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <RadioButton

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="我的关注"
                        android:button="@null"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/myguanzhu"
                        />
                </RadioGroup>
                <ImageView
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/my_"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#D5D5D5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radio2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <RadioButton

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="我的订单"
                        android:button="@null"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/my_dingdan"
                        />
                </RadioGroup>
                <ImageView
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/my_"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:background="#D5D5D5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radio3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <RadioButton

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="快看商城"
                        android:button="@null"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/my_shangcheng"
                        />
                </RadioGroup>
                <ImageView
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/my_"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#D5D5D5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radio4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <RadioButton

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="智能缓存"
                        android:button="@null"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/my_shangcheng"
                        />
                </RadioGroup>
                <ImageView
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/my_"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>