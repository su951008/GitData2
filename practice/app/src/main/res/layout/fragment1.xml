<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@mipmap/bt_fan2"
       android:orientation="horizontal"
       android:layout_weight="1.3">
       <LinearLayout
           android:id="@+id/linfenlei"
           android:layout_weight="1"

           android:gravity="center_horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <TextView
               android:textColor="#99004D"
               android:textSize="30sp"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_frag1_title"
               android:text="分类"/>
           <TextView
               android:id="@+id/tv_prog1"
               android:background="#FF80C0"
               android:layout_width="match_parent"
               android:layout_height="3sp"
               />
       </LinearLayout>
       <LinearLayout
           android:id="@+id/shudan"
           android:gravity="center_horizontal"
           android:layout_weight="1"

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <TextView
               android:textColor="#99004D"
               android:textSize="30sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_frag1_title2"
               android:text="书单"/>
           <TextView
               android:id="@+id/tv_prog2"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="3sp"
               android:background="#FE6CBF"/>
       </LinearLayout>
   </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_marginTop="2sp"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vp_Frag1">

    </android.support.v4.view.ViewPager>
</LinearLayout>